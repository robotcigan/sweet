.form-control
  min-height 5rem
  margin-bottom 1.6 rem
  position relative
  label
    color #91979d
    cursor text
    left 3rem
    position absolute
    pointer-events none
    top 16px
    transition all .2s
    max-width 100%
    &.form-control__label--active
      color $main
      font-size 1.2rem
      top 8px
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .select2-selection--single
    background #fff
    border 0
    border-radius 4px
    display block
    font-family $font
    font-size 1.6rem
    transition border-color .2s
    padding 2.8rem 2rem 1.2rem 3rem
    position relative
    resize vertical
    width 100%
    -webkit-appearance none
    // &:invalid
    //   & + label
    //     color $main
    //     font-size 1.2rem
    //     top 8px
    &:focus
      // border-color $primary
      & + label
        font-size 1.2rem
        top 8px
  textarea
    height 100%
    min-height 22rem
  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error
