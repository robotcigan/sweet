.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

.text
  .h1
    font-family $font-header
    font-size 6.4rem
    font-weight 400
    line-height 1
    margin-bottom 3rem
    text-transform uppercase
  p
    font-size 1.8rem
    font-weight 400
    line-height 1.6
    margin-bottom 4rem
  .first-symbol
    display inline-block
    font-family $font-header
    font-size 6.4rem
    line-height 1
    margin-right -4px
    transform translateX(-8px)


.flakes
  background url('../../img/flakes.png') top center no-repeat
  background-size cover
  height 28.5rem
  width 100%
